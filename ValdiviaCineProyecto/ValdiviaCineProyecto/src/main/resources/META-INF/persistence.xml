<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="CineJPAPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>Modelo.Cine</class>
    <class>Modelo.Cliente</class>
    <class>Modelo.ClienteVIP</class>
    <class>Modelo.Compras</class>
    <class>Modelo.Empleado</class>
    <class>Modelo.Entrada</class>
    <class>Modelo.Funcion</class>
    <class>Modelo.Insumo</class>
    <class>Modelo.Pago</class>
    <class>Modelo.Pelicula</class>
    <class>Modelo.Proveedor</class>
    <class>Modelo.Sala</class>
    <class>Modelo.SalaVIP</class>
    <class>Modelo.Venta</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/Cine?serverTimezone=UTC"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
